<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_idle"
    tools:context="com.exzy.toyota.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/video_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/light_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha="0"
            app:srcCompat="@mipmap/light_bottom" />

        <ImageView
            android:id="@+id/console_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:srcCompat="@mipmap/bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="98dp">

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="54dp"
                android:text="TOYOTA TELEMAYICS SYSTEM"
                android:textColor="@android:color/white"
                android:textSize="51sp" />

            <TextView
                android:id="@+id/sup_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:paddingBottom="45dp"
                android:paddingLeft="54dp"
                android:text="LEAD YOU BETTER CAR LIFE"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <FrameLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/pic1" />

                    <ImageView
                        android:id="@+id/image1_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/pause_black_filter" />

                    <ProgressBar
                        android:id="@+id/progressBar_video1"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:alpha="0"
                        android:background="@android:color/background_dark"
                        android:minHeight="1dp"
                        android:progress="30"
                        android:progressBackgroundTint="@android:color/black"
                        android:progressTint="@color/playing_TOYOTA"
                        android:scaleY="18"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/border_video1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/frame_big" />

                    <TextView
                        android:id="@+id/text_playing_video1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="35dp"
                        android:alpha="0"
                        android:text="PLAYING . . ."
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:visibility="visible" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/play_video1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/play_icon" />

                <ImageView
                    android:id="@+id/filter_video1"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="18dp"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/pic_filter" />

                <TextView
                    android:id="@+id/text_filter_video1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="90dp"
                    android:lineSpacingExtra="-13sp"
                    android:text="IMPROVE DRIVE\nSAFETY"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image2"
