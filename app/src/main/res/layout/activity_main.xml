                        android:layout_height="match_parent"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/pic2" />

                    <ImageView
                        android:id="@+id/image2_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/pause_black_filter" />

                    <ProgressBar
                        android:id="@+id/progressBar_video2"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:alpha="0"
                        android:background="@android:color/background_dark"
                        android:minHeight="1dp"
                        android:progress="30"
                        android:progressBackgroundTint="@android:color/black"
                        android:progressTint="@color/playing_TOYOTA"
                        android:scaleY="18"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/border_video2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/frame_big" />

                    <TextView
                        android:id="@+id/text_playing_video2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="35dp"
                        android:alpha="0"
                        android:text="PLAYING . . ."
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:visibility="visible" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/filter_video2"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/pic_filter" />

                <TextView
                    android:id="@+id/text_filter_video2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="90dp"
                    android:lineSpacingExtra="-13sp"
                    android:text="IMPROVE DRIVE\nSAFETY"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/play_video2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/play_icon" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/pic3" />

                    <ImageView
                        android:id="@+id/image3_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/pause_black_filter" />

                    <ProgressBar
                        android:id="@+id/progressBar_video3"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:alpha="0"
                        android:background="@android:color/background_dark"
                        android:minHeight="1dp"
                        android:progress="30"
                        android:progressBackgroundTint="@android:color/black"
                        android:progressTint="@color/playing_TOYOTA"
                        android:scaleY="18"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/border_video3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:alpha="0"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/frame_big" />

                    <TextView
                        android:id="@+id/text_playing_video3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="35dp"
                        android:alpha="0"
                        android:text="PLAYING . . ."
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:visibility="visible" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/filter_video3"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/pic_filter" />

                <TextView
                    android:id="@+id/text_filter_video3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="90dp"
                    android:lineSpacingExtra="-13sp"
                    android:text="IMPROVE DRIVE\nSAFETY"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/play_video3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/play_icon" />
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
